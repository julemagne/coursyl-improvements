<div class="row">
  <div class="span6">
    <h2>All Users</h2>
  </div>
  <div class="span6 vertical-middle">
    <div class="pull-right"><%= link_to '<i class="fa fa-plus"></i> New User'.html_safe, new_user_path, class: "btn btn-success list-page-new-button" %></div>
  </div>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>School</th>
      <th>Student?</th>
      <th>Instructor?</th>
      <th>Admin?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.school_name %></td>
        <td><%= '<i class="fa fa-check-sign text-info"></i>'.html_safe if user.student? %></td>
        <td><%= '<i class="fa fa-check-sign text-info"></i>'.html_safe if user.instructor? %></td>
        <td><%= '<i class="fa fa-check-sign text-info"></i>'.html_safe if user.admin? %></td>
        <td class="text-right"><%= link_to 'Edit', edit_user_path(user), class: "btn btn-mini" %>
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
